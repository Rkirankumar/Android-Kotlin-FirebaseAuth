<resources>

    <style name="AuthTheme"/>

    <style name="AuthTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="AuthTheme.TextView">
        <item name="android:fontFamily">@font/titillium_regular</item>
    </style>

    <style name="AuthTheme.TextView.Button">
        <item name="android:fontFamily">@font/titillium_semi_bold</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AuthTheme.TextView.Button.Google">
        <item name="android:background">@color/colorBlue</item>
    </style>
</resources>